---
export interface Props {
  name: string;
  description: string;
  imageUrl: string;
}

const { name, description, imageUrl } = Astro.props;
---

<div class="card">
  <img src={imageUrl} alt={name} />
  <div class="text-container">
    <h3>{name}</h3>
    <p>{description}</p>
  </div>
</div>

<style lang="scss">
  .card {
    width: 100%;
    height: 480px;
    background-color: var(--lightest-peach);
    border-radius: 16px;

    img {
      width: 100%;
      height: 320px;
      object-fit: cover;
      border-radius: 16px 16px 0 0;
    }

    .text-container {
      padding: 32px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 8px;
      text-align: center;

      h3 {
        color: var(--peach);
        text-transform: uppercase;
        letter-spacing: 5px;
      }

      p {
        color: var(--dark-grey);
        font-size: 16px;
        line-height: 26px;
      }
    }
  }
</style>
