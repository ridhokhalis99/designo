---
import Layout from "../layouts/Layout.astro";

const locations = [
  {
    name: "Canada",
    office: "Designo Central Office",
    address: "3886 Wellington Street",
    city: "Toronto, Ontario M9C 3J5",
    phone: "+1 253-863-8967",
    mapId: "map-canada",
  },
  {
    name: "Australia",
    office: "Designo AU Office",
    address: "19 Balonne Street",
    city: "New South Wales 2443",
    phone: "(02) 6720 9092",
    mapId: "map-australia",
  },
  {
    name: "United Kingdom",
    office: "Designo UK Office",
    address: "13 Colorado Way",
    city: "Rhyd-y-fro SA8 9GA",
    phone: "078 3115 1400",
    mapId: "map-uk",
  },
];
---

<Layout title="Location">
  <main>
    {
      locations.map((location) => (
        <section>
          <div class="text-wrapper">
            <div class="text-container">
              <h1>{location.name}</h1>
              <div class="address-contact">
                <div>
                  <h3>{location.office}</h3>
                  <p>{location.address}</p>
                  <p>{location.city}</p>
                </div>
                <div>
                  <h3>Contact Us ({location.name} Office)</h3>
                  <p>P : {location.phone}</p>
                  <p>
                    M :
                    <a
                      href="mailto:
                    mailto:contact@designo.co"
                    >
                      contact@designo.co
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="map" id={location.mapId} />
        </section>
      ))
    }
  </main>
</Layout>

<style lang="scss">
  main {
    gap: 32px;
  }

  section {
    display: flex;
    gap: 30px;

    .text-wrapper {
      width: 60%;
      background-color: var(--lightest-peach);
      padding: 95px 88px;
      color: var(--dark-grey);
      border-radius: 16px;
      background-image: url("/assets/shared/desktop/bg-pattern-two-circles.svg");
      background-repeat: no-repeat;
      background-position: 0 100%;

      h1 {
        font-size: 40px;
        font-weight: 500;
        color: var(--peach);
        margin-bottom: 24px;
      }

      .address-contact {
        display: flex;
        justify-content: space-between;
        align-items: baseline;

        h3,
        p {
          margin: 0;
          line-height: 26px;
        }

        h3 {
          margin-bottom: 12px;
        }

        a {
          text-decoration: none;
          color: var(--dark-grey);
        }
      }
    }

    .map {
      width: 40%;
      height: 500px;
      border-radius: 16px;
      background-color: var(--black);
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
    }

    #map-canada {
      background-image: url("assets/locations/desktop/image-map-canada.png");
    }

    #map-australia {
      background-image: url("assets/locations/desktop/image-map-australia.png");
    }

    #map-uk {
      background-image: url("assets/locations/desktop/image-map-united-kingdom.png");
    }
  }

  section:nth-child(even) {
    flex-direction: row-reverse;
  }
</style>
